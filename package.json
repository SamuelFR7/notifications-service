    "dotenv": "^16.0.3",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "29.7.0",
    "prettier": "^3.1.0",
    "prisma": "^5.6.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
